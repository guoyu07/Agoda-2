<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/banner_hallstatt_village">


<LinearLayout
    android:padding="10dp"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#95111111">

    <EditText
        android:background="@drawable/view_radius"
        android:padding="8dp"
        android:drawablePadding="6dp"
        android:layout_margin="6dp"
        android:ems="10"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:hint="Search Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@drawable/view_radius"
        android:padding="15dp"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="6dp"
            android:padding="8dp"
            android:background="#FFF"
            android:textColor="#111"
            android:textSize="16sp"
            android:text="Check -In \n 20 Dec"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginRight="6dp"
            android:layout_width="1dp"
            android:background="#90808080"
            android:layout_height="match_parent"
            ></View>

        <TextView
            android:layout_margin="6dp"
            android:padding="8dp"
            android:background="#FFF"
            android:textColor="#111"
            android:textSize="16sp"
            android:text="Check -In \n 20 Dec"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_margin="6dp"
            android:text="Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:text="Your last search \nNew Maruti Park Socity, Rajkot\nDec 20- dec21 | 1 Room 2 Adults"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>